{
    "_version": "1.12.0",

    "sap.app": {
        "id": "crud",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "applicationVersion": {
            "version": "${version}"
        }
    },

    "sap.ui": {
        "technology": "UI5",
        "icons": {},
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        }
    },

    "sap.ui5": {
        "rootView": {
            "viewName": "crud.view.App",
            "type": "XML",
            "async": true,
            "id": "app"
        },

        "dependencies": {
            "minUI5Version": "1.130.2",
            "libs": {
                "sap.ui.core": {},
                "sap.m": {}
            }
        },

        "handleValidation": true,

        "contentDensities": {
            "compact": true,
            "cozy": true
        },

        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleName": "crud.i18n.i18n"
                }
            }
        },

        "resources": {
            "css": [
                {
                    "uri": "css/index.css"
                }
            ]
        },
        "theme": "sap_fiori_3",
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewType": "XML",
                "viewPath": "crud.view",
                "controlId": "app",
                "controlAggregation": "pages",
                "async": true
            },
            "routes": [
                {
                    "pattern": "",
                    "name": "main",
                    "target": "main"
                },
                {
                    "pattern": "detail/{productId}",
                    "name": "detail",
                    "target": "detail"
                },
                {
                    "pattern": "persons",
                    "name": "persons",
                    "target": "persons"
                },
                {
                    "pattern": "personDetail/{personId}",
                    "name": "personDetail",
                    "target": "personDetail"
                }
            ],
            "targets": {
                "main": {
                    "viewName": "Main",
                    "viewLevel": 1
                },
                "detail": {
                    "viewName": "Detail",
                    "viewLevel": 2
                },
                "persons": {
                    "viewName": "Persons",
                    "viewLevel": 4
                },
                "personDetail": {
                    "viewName": "PersonDetail",
                    "viewLevel": 5
                },
                "notFound": {
                    "viewName": "NotFound",
                    "viewLevel": 3
                }
            }
        }
    }
}