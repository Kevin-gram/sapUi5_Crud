<mvc:View
    controllerName="crud.controller.PersonDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page
        title="Person Details"
        showNavButton="true"
        navButtonPress="onNavBack">
        <content >
            <VBox class="sapUiSmallMargin" items="{persons/}">
                <Text text="ID:" />
                <Text text="{persons>/ID}" />
                <Text text="Name:" />
                <Text text="{persons>/Name}" />
                <Text text="Age:" />
                <Text text="{persons/Age}" />
                <Text text="Gender:" />
                <Text text="{persons/Gender}" />
                <Text text="Phone:" />
                <Text text="{persons/Phone}" />
                <Text text="Address:" />
                <Text text="{person>/PersonDetail/Address/Street}, {person>/PersonDetail/Address/City}, {person>/PersonDetail/Address/State}, {person>/PersonDetail/Address/ZipCode}" />
            </VBox>
        </content>
    </Page>
</mvc:View>