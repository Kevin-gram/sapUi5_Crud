<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    controllerName="crud.controller.Main">
    <f:FlexibleColumnLayout
        id="layout"
        layout="TwoColumnsMidExpanded">
        <!-- Master Column -->
        <f:beginColumnPages>
        
            <Page title="Product List">
               <Table
                id="odataTable"
                inset="false"
                items="{/Products}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Product List" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="150px">
                        <header>
                            <Label text="Product ID" />
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Name" />
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Price" />
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Rating" />
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Release Date" />
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Actions" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Active"
                        press="onShowData"
                    >
                        <Text text="{ID}" />
                        <Text text="{Name}" />
                        <Text text="{Price}" />
                        <Text text="{Rating}" />
                        <Text
                            text="{path: 'ReleaseDate', formatter: '.formatter.formatDate'}"
                        />
                        <HBox class="gap">
                            <Button
                                icon="sap-icon://edit"
                                text="Edit"
                                press="onShowEditingDialog"
                                visible="true"
                            />
                            <Button
                                class="deleteButton"
                                icon="sap-icon://delete"
                                text="Delete"
                                press="onDeletePress"
                                visible="true"
                            />
                        </HBox>
                    </ColumnListItem>
                </items>
            </Table>
            </Page>
        </f:beginColumnPages>

        <!-- Detail Column -->
        <f:midColumnPages>
            <Page title="Product Details">
                <!-- Add content specific to product details -->
                <VBox>
                    <Text text="Details will appear here." />
                </VBox>
            </Page>
        </f:midColumnPages>

        <!-- End Column -->
        <f:endColumnPages>
            <Page title="Extra Details">
                <VBox>
                    <Text text="Extra details or editing view." />
                </VBox>
            </Page>
        </f:endColumnPages>
    </f:FlexibleColumnLayout>
</mvc:View>
