<mvc:View
    controllerName="crud.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <Page
        title="{i18n>appTitle}"
        id="page" class="sapUiSmallMargin">
        <headerContent>
            <Toolbar>
                <Button text="Create Product" press="onShowProductDialog"></Button>
            </Toolbar>
        </headerContent>
        <content>
        <SearchField width="50%" search="onSearch"/>
            <Table id="odataTable" inset="false" items="{/Products}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Product List"></Title>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column width="150px">
                        <header>
                            <Label text="Product ID"></Label>
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Name"></Label>
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Price"></Label>
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Rating"></Label>
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Release Date"></Label>
                        </header>
                    </Column>
                    <Column width="150px">
                        <header>
                            <Label text="Actions"></Label>
                        </header>
                    </Column>
                </columns>
                <items>
                    <!-- Simplified ColumnListItem for debugging purposes -->
                    <ColumnListItem type="Active" press="onShowData">
                        <!-- Text for debugging purposes -->
                        <Text text="{ID}"/>
                        <Text text="{Name}"/>
                        <Text text="{Price}"/>
                        <Text text="{Rating}"/>
                        <Text text="{path: 'ReleaseDate', formatter: '.formatter.formatDate'}"/>

                        <!-- Ensure both Edit and Delete buttons are visible -->
						<HBox>
						<Button icon="sap-icon://edit" text="Edit" press="onShowEditingDialog" visible="true"/>
                        <Button icon="sap-icon://delete" text="Delete" press="onDeletePress" visible="true"/>
						</HBox>
                        
                    </ColumnListItem>
                </items>
            </Table>

            <Panel id="productPanel" headerText="Product Detail">
                <VBox>
                    <Text id="productId" text=""></Text>
                    <Text id="productName" text=""></Text>
                    <Text id="productPrice" text=""></Text>
                    <Text id="productRating" text=""></Text>
                    <Text id="productReleaseDate" text=""></Text>
                </VBox>
            </Panel>
        </content>
    </Page>

    <!-- Update Product Dialog -->
    <Dialog id="updateDialog" title="Update Product">
        <VBox class="sapUiSmallMargin">
            <Label text="Product Name"/>
            <Input id="productNameText"/>
            <!-- <Label text="Product Id"/>
            <Input id="productIdText"/> -->
            <Label text="Price"/>
            <Input id="productPriceText" type="Number"/>
            <Label text="Rating"/>
            <Input id="productRatingText" type="Number"/>
            <Label text="Release Date"/>
            <DatePicker id="productReleaseDateText" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
        </VBox>
        <beginButton>
            <Button text="Save" press="onEditPress"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseEditingDialog"/>
        </endButton>
    </Dialog>

    <!-- Create Product Dialog -->
    <Dialog id="createProductDialog" title="Create Product" type="Message">
        <VBox class="sapUiSmallMargin">
            <Label text="Product ID"/>
            <Input id="newProductId" type="Number"/>
            <Label text="Name"/>
            <Input id="newProductName"/>
            <Label text="Price"/>
            <Input id="newProductPrice" type="Number"/>
            <Label text="Rating"/>
            <Input id="newProductRating" type="Number"/>
            <Label text="Release Date"/>
            <DatePicker id="newProductReleaseDate" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
        </VBox>
        <beginButton>
            <Button text="Create" press="onCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseProductDialog"/>
        </endButton>
    </Dialog>

</mvc:View>
