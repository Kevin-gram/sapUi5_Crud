<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idCreateProductDialog" title="Create Product" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox>
                <Label text="Product ID" labelFor="newProductId"/>
                <Input id="newProductId" type="Number"/>
                <Label text="Product Name" labelFor="newProductName"/>
                <Input id="newProductName"/>
                <Label text="Product Price" labelFor="newProductPrice"/>
                <Input id="newProductPrice" type="Number"/>
                <Label text="Product Rating" labelFor="newProductRating"/>
                <Input id="newProductRating" type="Number"/>
                <Label text="Release Date" labelFor="newProductReleaseDate"/>
                <DatePicker id="newProductReleaseDate"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Create" press="onCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseProductDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>