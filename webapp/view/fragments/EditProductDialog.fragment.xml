<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idEditProductDialog" title="Edit Product" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox>
                <Label text="Product Name" labelFor="productNameText"/>
                <Input id="productNameText"/>
                <Label text="Product Price" labelFor="productPriceText"/>
                <Input id="productPriceText" type="Number"/>
                <Label text="Product Rating" labelFor="productRatingText"/>
                <Input id="productRatingText" type="Number"/>
                <Label text="Release Date" labelFor="productReleaseDateText"/>
                <DatePicker id="productReleaseDateText"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Save" press="onEditPress"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseEditingDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>